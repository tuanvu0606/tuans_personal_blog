- if !@order_line_item.nil? && @order_line_item.errors.any?
  .alert.alert-danger
    %ul
      - @order_line_item.errors.full_messages.each do |msg|
        %li= msg
- if @order_line_items.size == 0
  %p.text-center
    There are no items in your shopping cart.  Please #{link_to "go back", root_path} and add some items to your cart.
- else
  - @order_line_items.each do |order_item|
    //= render 'orders/cart_row', product: order_item.inventory_item, order_item: order_item, show_total: true
    %p
      %strong Inventory item:
      = @order_line_item.inventory_item
    %p
      %strong Order:
      = @order_line_item.order
    %p
      %strong Order item qty:
      = @order_line_item.order_item_qty
    %p
      %strong Total price:
      = @order_line_item.total_price
    %p
      %strong Order line item price:
      = @order_line_item.order_line_item_price