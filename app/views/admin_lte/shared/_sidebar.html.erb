<aside class="main-sidebar">
  <section class="sidebar">

    <div class="user-panel">
      <div class="pull-left image">
        <%= image_tag "http://placehold.it/160x160", class: "img-circle" %>
      </div>
      <div class="pull-left info">
        <p><%= current_user.name %></p>
        <%= link_to '<i class="fa fa-circle text-success"></i><span>Online</span>'.html_safe, admin_lte_root_path %>
      </div>
    </div>

    <form action="#" method="get" class="sidebar-form">
      <div class="input-group">
        <input type="text" name="q" class="form-control" placeholder="Search...">
        <span class="input-group-btn">
          <button type="submit" name="search" id="search-btn" class="btn btn-flat">
            <i class="fa fa-search"></i>
          </button>
        </span>
      </div>
    </form>

    <ul class="sidebar-menu">
      <li class="header"><%= t('admin.sidebar.main_navigation') %></li>
      <li> <%= link_to '<i class="fa fa-dashboard"></i><span>Dashboard</span>'.html_safe, admin_lte_root_path %> </li>
      <li> <%= link_to '<i class="fa fa-users"></i><span>User</span>'.html_safe, admin_lte_users_path %> </li>
      <li> <%= link_to '<i class="fa fa-users"></i><span>Articles</span>'.html_safe, admin_lte_articles_path %> </li>
      <li> <%= link_to '<i class="fa fa-envelope-open-o"></i><span>Categories</span>'.html_safe, admin_lte_inventory_item_categories_path %> </li>
      <li> <%= link_to '<i class="fa fa-envelope-open-o"></i><span>Products</span>'.html_safe, admin_lte_inventory_items_path %> </li>

      <li class="header"><%= t('admin.sidebar.administration') %></li>

    </ul>

  </section>
</aside>
