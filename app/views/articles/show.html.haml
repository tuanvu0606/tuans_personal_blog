- if user_signed_in? && current_user.admin
  %p#notice= notice
  %p
    %strong Name:
    = @article.name
  %p
    %strong Description:
    = @article.description
  %p
    %strong Content:
    = @article.content
  = link_to 'Edit', edit_article_path(@article)
  |
  = link_to 'Back', articles_path
  %br
  = link_to 'New Article', new_article_path
- else       
  .card-header
    %h5.card-title 
      =markdown(@article.name)
  -# = link_to image_tag(@article.image_url(:articles)), @article, :class => "img card-img-top"          
  .card-body          
    %p.card-text 
      =markdown(@article.description)
    %p.card-text 
      =markdown(@article.content)
    //%a.btn.btn-primary
    //  = link_to 'Details', article
    //= link_to 'Details', @article, :class => "a btn btn-primary"
  .card-footer.text-muted
    Updated at:
    =@article.updated_at

